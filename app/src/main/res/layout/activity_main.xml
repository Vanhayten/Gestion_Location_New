<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:openDrawer="end"
    android:background="@color/NAVwhite_theme50"
    android:id="@+id/drawer"
    android:layout_height="match_parent"
    tools:context=".vehicules">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/NAVwhite_theme50" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="672dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:background="@color/NAVwhite_theme50"
            android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/NAVblack_theme75"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mes vÃ©hicules"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp"
            android:textSize="28dp"
            android:textAlignment="center"
            android:gravity="center_horizontal"></TextView>

        <EditText
            android:layout_width="300dp"
            android:layout_marginLeft="40dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:hint="Recherche"
            android:textColorHint="#FFFFFF"
            android:textAlignment="center"
            android:textColor="@color/NAVwhite_theme50"
            style="@style/Widget.MaterialComponents.BottomAppBar.Colored"

            />
        
        <TextView
            android:id="@+id/idcolor"
            android:layout_width="match_parent"
            android:layout_height="1dp"></TextView>

    </LinearLayout>
    <ListView
        android:id="@+id/list1"
        android:layout_width="match_parent"
        android:layout_marginLeft=""
        android:layout_height="wrap_content"
        >

    </ListView>

            <Button
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_buttom"
                android:drawableStart="@drawable/ic_add_black_24dp"
                android:drawableLeft="@drawable/ic_add_black_24dp"
                android:drawablePadding="4dp"
                android:text="Ajouter"
                android:textColor="@color/NAVwhite_theme50">

            </Button>

        </LinearLayout>

        //comment


    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:id="@+id/navigationView"
        app:menu="@menu/menu_item"
        app:headerLayout="@layout/header"
        android:layout_gravity="start"
        android:background="@color/NAVwhite_theme10"
        />


</androidx.drawerlayout.widget.DrawerLayout>