<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:padding="5dp"
    android:orientation="vertical"
    android:layout_gravity="center">


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="475dp"
        android:background="@color/colorPrimaryDark"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp">

            <EditText
                android:id="@+id/text_design"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:hint="Designation"
                android:inputType="none"
                android:textColor="@color/NAVwhite"
                android:textColorHint="@color/NAVwhite"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/text_Montant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:hint="Montant"
                android:inputType="number"
                android:textColor="@color/NAVwhite"
                android:textColorHint="@color/NAVwhite"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/text_datecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:clickable="true"
                android:hint="Date"
                android:inputType="date"
                android:textColor="@color/NAVwhite"
                android:textColorHint="@color/NAVwhite"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mode Payment : "
                android:textColor="@color/NAVwhite"
                android:layout_marginTop="5sp"
                android:textSize="18dp"

                />
         <CheckBox
             android:id="@+id/mode_espéce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:text="espéce"
             android:textColor="@color/NAVwhite"
             android:layout_marginLeft="80dp"

             />
            <CheckBox
                android:id="@+id/mode_chèque"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="chèque"
                android:textColor="@color/NAVwhite"
                android:layout_marginLeft="80dp"

                />
            <CheckBox
                android:id="@+id/mode_virement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="virement"
                android:textColor="@color/NAVwhite"
                android:layout_marginLeft="80dp"

                />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            >

            <Button
                android:id="@+id/btn_confirmer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="18dp"
                android:background="@drawable/button_style"
                android:gravity="center"
                android:onClick="Confirmer"
                android:text="Confirmer"


                android:textColor="@color/NAVwhite" />


        </LinearLayout>

    </LinearLayout>
</ScrollView>