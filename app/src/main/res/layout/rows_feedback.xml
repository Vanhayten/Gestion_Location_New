<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="@drawable/my_custom_feedback_baground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="11dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dateFeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="10/10/2020"
            android:textAlignment="center"
            android:textColor="@color/NAVwhite.1"
            android:textSize="11sp"
            android:layout_marginRight="8dp"/>

        <RatingBar
            android:id="@+id/ratingb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:progressBackgroundTint="@color/NAVwhite.1"
            android:progressTint="#FFCC01"
            style="?android:attr/ratingBarStyleSmall"
            android:isIndicator="true"

            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="11dp"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/descFeed"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="10/10/2020"
            android:textColor="#000C5D"
            android:textSize="15sp"
            />
    </LinearLayout>

</LinearLayout>


