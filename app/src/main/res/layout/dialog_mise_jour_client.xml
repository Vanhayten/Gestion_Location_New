<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:padding="5dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:id="@+id/globalLayout">
    <TextView
        android:id="@+id/text_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textColor="@color/NAVwhite"
        android:text="x"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:gravity="center"
        android:background="@drawable/cercelbaground"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="-25dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_nom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cin"
            android:layout_marginBottom="4dp"
            android:textStyle="bold"
            android:textColor="@color/NAVwhite"
            android:layout_marginTop="5sp"
            android:textSize="18dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_assurance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="18dp"
            android:background="@drawable/button_style"
            android:gravity="center"
            android:text="@string/Modifier"
            android:textColor="@color/NAVwhite" />

        <Button
            android:id="@+id/btn_suprimer_clients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_style"
            android:gravity="center"
            android:text="@string/Supprimer"
            android:textColor="@color/NAVwhite" />

    </LinearLayout>

        <!--android:visibility="gone"-->

        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Evoluez"
                android:textColor="@color/NAVwhite_theme10"
                android:layout_gravity="center" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_marginTop="9dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:progressTint="#FFCC01"
                android:progressBackgroundTint="@color/NAVgray_theme50"

                />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/descLayout"
        android:visibility="gone">
        <EditText
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="75dp"
            android:hint="description"
            android:textColorHint="@color/NAVgray_theme50"
            android:gravity="center"
            android:textColor="@color/NAVwhite.1"
            android:background="@drawable/edittextbackground"
            android:id="@+id/descript">

        </EditText>
        <Button
            android:id="@+id/ratingBTN"
            android:layout_gravity="center"
            android:layout_width="120dp"
            android:layout_height="50dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="confirm">

        </Button>
    </LinearLayout>


</LinearLayout>