<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="330dp"
    android:layout_gravity="center"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/text_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:background="@drawable/cercelbaground"
        android:gravity="center"
        android:text="x"
        android:textColor="@color/NAVwhite"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_nom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:text="Nom"
            android:textColor="@color/NAVwhite"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="333dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/reparation"
            android:layout_width="290dp"
            android:layout_height="70dp"
            android:scaleType="center"
            android:src="@drawable/reparation" />

        <ImageButton
            android:id="@+id/vidange"
            android:layout_width="290dp"
            android:layout_height="70dp"
            android:layout_marginTop="8dp"
            android:scaleType="center"
            android:src="@drawable/vidange" />

        <ImageButton
            android:id="@+id/visite_technique"
            android:layout_width="290dp"
            android:layout_height="70dp"
            android:layout_marginTop="8dp"
            android:scaleType="center"
            android:src="@drawable/visite_technique" />



</LinearLayout>

    </LinearLayout>