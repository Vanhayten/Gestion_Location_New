<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:padding="5dp"
    android:orientation="vertical"
    android:layout_gravity="center">


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="475dp"
        android:background="@color/colorPrimaryDark"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp">

            <EditText

                android:id="@+id/text_prenom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:enabled="false"
                android:hint="@string/Matricule"
                android:textColor="@color/green"
                android:textColorHint="@color/BlueDarck"
                android:gravity="center"
                android:background="@drawable/rounded_edit_text"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/text_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="@string/date_visite"
                android:inputType="date"
                android:textSize="18dp"
                android:textColor="@color/NAVblack_theme100"
                android:textColorHint="@color/BlueDarck"
                android:gravity="center"
                android:background="@drawable/rounded_edit_text"/>

            <EditText
                android:id="@+id/text_date_proch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_edit_text"
                android:gravity="center"
                android:hint="@string/date_proch"
                android:inputType="date"
                android:textColor="@color/NAVblack_theme100"
                android:textColorHint="@color/BlueDarck"
                android:textSize="18dp" />


            <Button
                android:id="@+id/btn_modifier1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirmer"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="18dp"
                android:background="@drawable/button_style"
                android:textColor="@color/NAVwhite" />


        </LinearLayout>

    </LinearLayout>
</ScrollView>